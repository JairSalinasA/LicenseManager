<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="LicenseManager.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LicensePro - Dashboard" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        x:Name="MainWindowRoot">

    <Window.Resources>
        <!-- Estilo para TextBox con Placeholder -->
        <Style x:Key="PlaceholderTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <TextBlock x:Name="PlaceholderText"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="{DynamicResource TextMuted}"
                                           Padding="{TemplateBinding Padding}"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed"/>
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Padding="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botones del menú lateral -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SidebarText}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8"
                                Margin="8,2">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botones activos del sidebar -->
        <Style x:Key="SidebarButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Estilo para tarjetas de estadísticas -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.08" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botones de acción -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para el botón principal -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SecondaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource AppBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border x:Name="SidebarBorder" 
                Grid.Column="0" 
                Background="{DynamicResource SidebarBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo y título -->
                <StackPanel x:Name="LogoSection" Grid.Row="0" Margin="25,30,25,20">
                    <TextBlock Text="🏢" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="LogoTitle" 
                               Text="LicensePro" 
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextColor}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="LogoSubtitle" 
                               Text="License Management" 
                               FontSize="11"
                               Foreground="{DynamicResource TextSecondary}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <Separator Grid.Row="1" Margin="20,0" Background="{DynamicResource BorderColor}"/>

                <!-- Búsqueda con Placeholder -->
                <TextBox x:Name="SidebarSearchBox"
                         Grid.Row="2"
                         Style="{StaticResource PlaceholderTextBoxStyle}"
                         Tag="Buscar..."
                         Margin="16,16,16,8"/>

                <!-- Menú de navegación -->
                <ScrollViewer Grid.Row="3" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="0,12,0,0">
                    <StackPanel x:Name="MenuItemsPanel">
                        <Button x:Name="DashboardBtn" Style="{StaticResource SidebarButtonActiveStyle}" Click="NavigateToDashboard">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock x:Name="DashboardText" Text="Dashboard" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" Click="NavigateToLicenses">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔑" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock x:Name="LicensesText" Text="Licencias" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" Click="NavigateToProducts">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock x:Name="ProductsText" Text="Productos" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" Click="NavigateToClients">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock x:Name="ClientsText" Text="Clientes" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" Click="NavigateToSettings">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock x:Name="SettingsText" Text="Configuración" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="10,20" Background="{DynamicResource BorderColor}"/>

                        <Button Style="{StaticResource SidebarButtonStyle}" Click="Logout">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚪" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock x:Name="LogoutText" Text="Cerrar Sesión" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Soporte -->
                <Border x:Name="SupportSection" 
                        Grid.Row="4" 
                        Background="{DynamicResource InputBackground}"
                        CornerRadius="12" 
                        Margin="15,10,15,20"
                        Padding="16">
                    <StackPanel>
                        <TextBlock x:Name="SupportTitle" 
                                   Text="¿Necesitas ayuda?" 
                                   Foreground="{DynamicResource TextColor}"
                                   FontWeight="SemiBold"
                                   FontSize="13"/>
                        <TextBlock x:Name="SupportText" 
                                   Text="Contacta con nuestro equipo" 
                                   Foreground="{DynamicResource TextSecondary}"
                                   FontSize="11"
                                   Margin="0,4,0,12"
                                   TextWrapping="Wrap"/>
                        <Button Content="Contáctanos" 
                                Background="{DynamicResource PrimaryColor}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="12,8"
                                Cursor="Hand"
                                FontSize="12"
                                Click="ContactSupport">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource HeaderBackground}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="0,0,0,1"
                    Padding="30,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Botón hamburger -->
                    <Button Grid.Column="0" 
                            Style="{StaticResource ActionButtonStyle}"
                            Margin="0,0,20,0"
                            Click="ToggleSidebar"
                            ToolTip="Expandir/Contraer menú">
                        <TextBlock Text="☰" FontSize="16"/>
                    </Button>

                    <!-- Barra de búsqueda central -->
                    <Border Grid.Column="1" 
                            Background="{DynamicResource InputBackground}"
                            BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="8" 
                            Padding="12,8"
                            MaxWidth="500"
                            HorizontalAlignment="Left">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🔍" Grid.Column="0" 
                                       FontSize="14"
                                       Foreground="{DynamicResource TextMuted}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1" 
                                     Background="Transparent" 
                                     BorderThickness="0"
                                     x:Name="HeaderSearchBox"
                                     VerticalContentAlignment="Center"
                                     FontSize="14"
                                     Foreground="{DynamicResource TextColor}"
                                     Style="{StaticResource PlaceholderTextBoxStyle}"
                                     Tag="Buscar licencias, clientes..."/>
                        </Grid>
                    </Border>

                    <!-- Usuario y notificaciones -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <!-- Notificaciones -->
                        <Button Style="{StaticResource ActionButtonStyle}" 
                                Margin="0,0,10,0"
                                Click="ShowNotifications">
                            <Grid>
                                <TextBlock Text="🔔" FontSize="16"/>
                                <Ellipse Width="8" Height="8" 
                                         Fill="{DynamicResource DangerColor}"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         Margin="0,-2,-2,0"/>
                            </Grid>
                        </Button>

                        <!-- Botón tema -->
                        <Button Style="{StaticResource ActionButtonStyle}" 
                                Margin="0,0,15,0"
                                x:Name="ThemeToggleBtn"
                                Click="ToggleTheme"
                                ToolTip="Cambiar tema">
                            <TextBlock Text="🌙" FontSize="16" x:Name="ThemeIcon"/>
                        </Button>

                        <!-- Info de usuario con menú desplegable -->
                        <Grid>
                            <Button Background="Transparent" 
                                    BorderThickness="0"
                                    Padding="8"
                                    Cursor="Hand"
                                    x:Name="UserMenuButton"
                                    Click="ToggleUserMenu">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="36" Height="36" 
                                            Background="{DynamicResource PrimaryColor}"
                                            CornerRadius="18"
                                            Margin="0,0,10,0">
                                        <TextBlock Text="AM" 
                                                   Foreground="White"
                                                   FontWeight="Bold"
                                                   FontSize="13"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Margin="0,0,8,0">
                                        <TextBlock Text="Admin Manager" 
                                                   FontWeight="SemiBold"
                                                   FontSize="13"
                                                   Foreground="{DynamicResource TextColor}"/>
                                        <TextBlock Text="Administrador" 
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextSecondary}"/>
                                    </StackPanel>
                                    <TextBlock Text="▼" 
                                               FontSize="10"
                                               Foreground="{DynamicResource TextSecondary}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Popup del menú de usuario -->
                            <Popup x:Name="UserMenuPopup" 
                                   PlacementTarget="{Binding ElementName=UserMenuButton}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   StaysOpen="False"
                                   HorizontalOffset="-120"
                                   VerticalOffset="10">
                                <Border Background="{DynamicResource CardBackground}"
                                        BorderBrush="{DynamicResource BorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="8"
                                        Width="220">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.15" Color="#000000"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <!-- Información del usuario -->
                                        <Border Background="{DynamicResource InputBackground}"
                                                CornerRadius="6"
                                                Padding="12"
                                                Margin="0,0,0,8">
                                            <StackPanel>
                                                <TextBlock Text="Admin Manager" 
                                                           FontWeight="SemiBold"
                                                           FontSize="14"
                                                           Foreground="{DynamicResource TextColor}"/>
                                                <TextBlock Text="admin@licensepro.com" 
                                                           FontSize="12"
                                                           Foreground="{DynamicResource TextSecondary}"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <Separator Margin="0,4" Background="{DynamicResource BorderColor}"/>

                                        <!-- Opciones del menú -->
                                        <Button Background="Transparent" 
                                                BorderThickness="0"
                                                Padding="12,10"
                                                Cursor="Hand"
                                                HorizontalContentAlignment="Left"
                                                Click="OpenProfile">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="👤" FontSize="14" Margin="0,0,10,0"/>
                                                <TextBlock Text="Mi Perfil" FontSize="13" Foreground="{DynamicResource TextColor}"/>
                                            </StackPanel>
                                        </Button>

                                        <Button Background="Transparent" 
                                                BorderThickness="0"
                                                Padding="12,10"
                                                Cursor="Hand"
                                                HorizontalContentAlignment="Left"
                                                Click="OpenSettings">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="⚙️" FontSize="14" Margin="0,0,10,0"/>
                                                <TextBlock Text="Configuración" FontSize="13" Foreground="{DynamicResource TextColor}"/>
                                            </StackPanel>
                                        </Button>

                                        <Button Background="Transparent" 
                                                BorderThickness="0"
                                                Padding="12,10"
                                                Cursor="Hand"
                                                HorizontalContentAlignment="Left"
                                                Click="OpenHelp">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="❓" FontSize="14" Margin="0,0,10,0"/>
                                                <TextBlock Text="Ayuda" FontSize="13" Foreground="{DynamicResource TextColor}"/>
                                            </StackPanel>
                                        </Button>

                                        <Separator Margin="0,4" Background="{DynamicResource BorderColor}"/>

                                        <Button Background="Transparent" 
                                                BorderThickness="0"
                                                Padding="12,10"
                                                Cursor="Hand"
                                                HorizontalContentAlignment="Left"
                                                Click="Logout">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FEE2E2"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🚪" FontSize="14" Margin="0,0,10,0"/>
                                                <TextBlock Text="Cerrar Sesión" FontSize="13" Foreground="{DynamicResource DangerColor}"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- CONTENIDO DEL DASHBOARD -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="30">
                <StackPanel>
                    <!-- Título de página -->
                    <TextBlock Text="Dashboard de Licencias" 
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextColor}"
                               Margin="0,0,0,30"/>

                    <!-- Tarjetas de estadísticas -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Licencias Totales -->
                        <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Licencias Totales" 
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondary}"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="2,847" 
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource TextColor}"/>
                                </StackPanel>

                                <Border Grid.Column="1" 
                                        Width="60" Height="60"
                                        Background="#EFF6FF"
                                        CornerRadius="12">
                                    <TextBlock Text="🔑" FontSize="28" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Licencias Activas -->
                        <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Activas" 
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondary}"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="2,126" 
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource SuccessColor}"/>
                                </StackPanel>

                                <Border Grid.Column="1" 
                                        Width="60" Height="60"
                                        Background="#D1FAE5"
                                        CornerRadius="12">
                                    <TextBlock Text="✓" FontSize="32" 
                                               Foreground="{DynamicResource SuccessColor}"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Por Vencer -->
                        <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Por Vencer" 
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondary}"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="437" 
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource WarningColor}"/>
                                </StackPanel>

                                <Border Grid.Column="1" 
                                        Width="60" Height="60"
                                        Background="#FEF3C7"
                                        CornerRadius="12">
                                    <TextBlock Text="⚠" FontSize="32" 
                                               Foreground="{DynamicResource WarningColor}"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Expiradas -->
                        <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Expiradas" 
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondary}"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="284" 
                                               FontSize="32"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource DangerColor}"/>
                                </StackPanel>

                                <Border Grid.Column="1" 
                                        Width="60" Height="60"
                                        Background="#FEE2E2"
                                        CornerRadius="12">
                                    <TextBlock Text="✕" FontSize="32" 
                                               Foreground="{DynamicResource DangerColor}"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Acciones rápidas -->
                    <Border Style="{StaticResource StatCardStyle}" Margin="10,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Acciones Rápidas" 
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextColor}"
                                           Margin="0,0,0,15"/>
                                <TextBlock Text="Gestiona tus licencias de manera eficiente" 
                                           FontSize="13"
                                           Foreground="{DynamicResource TextSecondary}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="0,0,10,0"
                                        Click="GenerateNewLicense">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="➕" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="Nueva Licencia"/>
                                    </StackPanel>
                                </Button>

                                <Button Background="Transparent"
                                        Foreground="{DynamicResource PrimaryColor}"
                                        BorderBrush="{DynamicResource PrimaryColor}"
                                        BorderThickness="2"
                                        Padding="20,12"
                                        FontWeight="SemiBold"
                                        Cursor="Hand"
                                        Click="ViewAllLicenses">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <TextBlock Text="Ver Todas"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Tabla de licencias recientes -->
                    <Border Style="{StaticResource StatCardStyle}" Margin="10,20,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Encabezado -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Licencias Recientes" 
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextColor}"/>

                                <ComboBox Grid.Column="1"
                                          x:Name="FilterStatusCombo"
                                          Width="150"
                                          Padding="10,8"
                                          FontSize="13"
                                          Background="{DynamicResource CardBackground}"
                                          Foreground="{DynamicResource TextColor}"
                                          BorderBrush="{DynamicResource BorderColor}"
                                          SelectionChanged="FilterStatus_Changed">
                                    <ComboBoxItem Content="Todas" IsSelected="True"/>
                                    <ComboBoxItem Content="Activas"/>
                                    <ComboBoxItem Content="Expiradas"/>
                                    <ComboBoxItem Content="Por vencer"/>
                                </ComboBox>
                            </Grid>

                            <!-- DataGrid -->
                            <DataGrid Grid.Row="2" 
                                      x:Name="LicensesDataGrid"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="None"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      RowHeight="60"
                                      FontSize="14"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow">

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Padding" Value="15,12"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#EFF6FF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>

                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="15,0"/>
                                        <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridCell">
                                                    <Border Padding="{TemplateBinding Padding}" 
                                                            Background="{TemplateBinding Background}">
                                                        <ContentPresenter VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#EFF6FF"/>
                                                <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.CellStyle>

                                <DataGrid.Columns>
                                    <!-- ID Licencia -->
                                    <DataGridTextColumn Header="ID LICENCIA" Binding="{Binding LicenseId}" Width="140">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Consolas"/>
                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="FontSize" Value="13"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Cliente -->
                                    <DataGridTextColumn Header="CLIENTE" Binding="{Binding Client}" Width="*" MinWidth="150">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Medium"/>
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Producto -->
                                    <DataGridTextColumn Header="PRODUCTO" Binding="{Binding Product}" Width="*" MinWidth="150">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Fecha Expiración -->
                                    <DataGridTextColumn Header="FECHA EXPIRACIÓN" Binding="{Binding ExpirationDate, StringFormat='dd MMM yyyy'}" Width="140">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="14"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Días Restantes -->
                                    <DataGridTemplateColumn Header="DÍAS RESTANTES" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding DaysRemainingColor}"
                                                        CornerRadius="6"
                                                        Padding="10,5"
                                                        HorizontalAlignment="Left"
                                                        MinWidth="85">
                                                    <TextBlock Text="{Binding DaysRemaining}" 
                                                               Foreground="White"
                                                               FontWeight="SemiBold"
                                                               FontSize="12"
                                                               HorizontalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Estado -->
                                    <DataGridTemplateColumn Header="ESTADO" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding StatusColor}"
                                                        CornerRadius="6"
                                                        Padding="10,5"
                                                        HorizontalAlignment="Left"
                                                        MinWidth="75">
                                                    <TextBlock Text="{Binding Status}" 
                                                               Foreground="White"
                                                               FontWeight="SemiBold"
                                                               FontSize="12"
                                                               HorizontalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Acciones -->
                                    <DataGridTemplateColumn Header="ACCIONES" Width="140">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button Style="{StaticResource ActionButtonStyle}" 
                                                            ToolTip="Ver detalles"
                                                            Margin="2"
                                                            Width="32"
                                                            Height="32"
                                                            Click="ViewLicenseDetails">
                                                        <TextBlock Text="👁️" FontSize="14"/>
                                                    </Button>
                                                    <Button Style="{StaticResource ActionButtonStyle}" 
                                                            ToolTip="Editar"
                                                            Margin="2"
                                                            Width="32"
                                                            Height="32"
                                                            Click="EditLicense">
                                                        <TextBlock Text="✏️" FontSize="14"/>
                                                    </Button>
                                                    <Button Style="{StaticResource ActionButtonStyle}" 
                                                            ToolTip="Renovar"
                                                            Margin="2"
                                                            Width="32"
                                                            Height="32"
                                                            Click="RenewLicense">
                                                        <TextBlock Text="🔄" FontSize="14"/>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Footer -->
                    <TextBlock Text="© 2024 LicensePro - Sistema de Administración de Licencias | v2.0"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextSecondary}"
                               FontSize="12"
                               Margin="0,20,0,30"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>