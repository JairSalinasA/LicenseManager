<Window x:Class="LicenseManager.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License Manager" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F8F9FA">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="🎉 ¡APLICACIÓN INICIADA!" 
                      FontSize="28" 
                      FontWeight="Bold"
                      Foreground="#2C3E50"
                      Margin="0,0,0,20"/>

            <TextBlock Text="Splash Screen funcionando correctamente" 
                      FontSize="16"
                      Foreground="#7F8C8D"
                      HorizontalAlignment="Center"/>

            <Button Content="Continuar" 
                    Width="120" 
                    Height="40"
                    Margin="0,40,0,0"
                    Background="#3498DB"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>