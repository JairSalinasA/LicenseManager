<Window x:Class="LicenseManager.Presentation.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading..."
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="350"
        Width="550">

    <!-- Fondo con bordes redondeados y sombra -->
    <Border Background="White" 
            CornerRadius="15"
            BorderBrush="#3498DB"
            BorderThickness="2">

        <!-- Sombra -->
        <Border.Effect>
            <DropShadowEffect ShadowDepth="10" 
                             BlurRadius="20" 
                             Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <!-- Fondo degradado -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#3498DB" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Icono grande -->
            <TextBlock Grid.Row="0" 
                      Text="🔑" 
                      FontSize="80"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,20,0,0"/>

            <!-- Título principal -->
            <TextBlock Grid.Row="1" 
                      Text="LICENSE MANAGER"
                      Foreground="White"
                      FontSize="32"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,10,0,0"/>

            <!-- Subtítulo -->
            <TextBlock Grid.Row="2" 
                      Text="Professional License Management System"
                      Foreground="#ECF0F1"
                      FontSize="16"
                      HorizontalAlignment="Center"
                      Margin="0,5,0,0"/>

            <!-- Loading text -->
            <TextBlock Grid.Row="3" 
                      x:Name="LoadingText"
                      Text="Loading..."
                      Foreground="White"
                      FontSize="14"
                      FontStyle="Italic"
                      HorizontalAlignment="Center"
                      Margin="0,40,0,40"/>
        </Grid>
    </Border>
</Window>