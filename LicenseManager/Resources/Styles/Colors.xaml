<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Colores principales -->
	<SolidColorBrush x:Key="PrimaryBrush" Color="#2C3E50"/>
	<SolidColorBrush x:Key="SecondaryBrush" Color="#3498DB"/>
	<SolidColorBrush x:Key="SuccessBrush" Color="#27AE60"/>
	<SolidColorBrush x:Key="WarningBrush" Color="#F39C12"/>
	<SolidColorBrush x:Key="DangerBrush" Color="#E74C3C"/>
	<SolidColorBrush x:Key="LightBrush" Color="#ECF0F1"/>
	<SolidColorBrush x:Key="DarkBrush" Color="#34495E"/>

	<!-- Colores específicos para Splash -->
	<SolidColorBrush x:Key="SplashBackground" Color="#2C3E50"/>
	<SolidColorBrush x:Key="SplashForeground" Color="White"/>
	<SolidColorBrush x:Key="SplashAccent" Color="#3498DB"/>

</ResourceDictionary>