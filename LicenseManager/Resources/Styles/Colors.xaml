<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========== TEMA CLARO (Default) ========== -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#3B82F6"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#2563EB"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
    <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
    <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>

    <!-- Backgrounds Tema Claro -->
    <SolidColorBrush x:Key="AppBackground" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SidebarBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HeaderBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBackground" Color="#F9FAFB"/>

    <!-- Texto Tema Claro -->
    <SolidColorBrush x:Key="TextColor" Color="#1F2937"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#6B7280"/>
    <SolidColorBrush x:Key="TextMuted" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="SidebarText" Color="#1F2937"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>

</ResourceDictionary>