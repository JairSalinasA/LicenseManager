<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- ========== TEMA OSCURO ========== -->
	<SolidColorBrush x:Key="PrimaryColor" Color="#3B82F6"/>
	<SolidColorBrush x:Key="SecondaryColor" Color="#2563EB"/>
	<SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
	<SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
	<SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>

	<!-- Backgrounds Tema Oscuro -->
	<SolidColorBrush x:Key="AppBackground" Color="#0F1419"/>
	<SolidColorBrush x:Key="CardBackground" Color="#1A1F2E"/>
	<SolidColorBrush x:Key="SidebarBackground" Color="#1A1F2E"/>
	<SolidColorBrush x:Key="HeaderBackground" Color="#1A1F2E"/>
	<SolidColorBrush x:Key="InputBackground" Color="#111827"/>

	<!-- Texto Tema Oscuro -->
	<SolidColorBrush x:Key="TextColor" Color="#E5E7EB"/>
	<SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>
	<SolidColorBrush x:Key="TextMuted" Color="#6B7280"/>
	<SolidColorBrush x:Key="SidebarText" Color="#E5E7EB"/>

	<!-- Borders -->
	<SolidColorBrush x:Key="BorderColor" Color="#374151"/>

</ResourceDictionary>